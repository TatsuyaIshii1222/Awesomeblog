<h1 class="text-center border-bottom p-4 mb-3">Users</h1>

<div class="row">
    <%@users.each do |user|%>
        <div class="col-lg-6 ">
            <div class="media mb-3 d-flex justify-content-between">
                <div>
                    <div class="align-self-center mr-3 border d-inline-block">
                        <%= link_to(gravatar_for(user),user)%>
                    </div>
                    <div class="media-body d-inline-block">
                        <h4><%= link_to(user.name,user_path(user))%></h4>
                    </div>
                </div>
                <%= link_to("Delete",user,method: :delete,class:"btn btn-outline-danger btn-sm",data: {confirm: "Are you sure"}) if current_user == user || current_user.admin?%>
            </div>
        </div>
    <%end%>
</div>

<div class="paginate text-center border-top pt-3">
    <%= will_paginate%>
</div>